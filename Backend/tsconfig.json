{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],
    "strict": true,
    
    "rootDir": "./src",
    "outDir": "./dist",

    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true, 
    
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*"]
}